<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.egco.project.project2.Edit_th">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ผู้ใช้01"
        android:id="@+id/nameTh"
        android:textSize="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ชื่อ"
        android:id="@+id/nameThText"
        android:textSize="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/nameTh"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editNameTh"
        android:textSize="40dp"
        android:layout_below="@+id/nameThText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="ความสูง"
        android:id="@+id/heightThText"
        android:textSize="40dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_below="@+id/editNameTh"
        android:layout_alignParentLeft="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editHeightTh"
        android:textSize="40dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:layout_below="@+id/heightThText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:text="ไทย"
        android:id="@+id/thThBut"
        android:textSize="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/editHeightTh"/>

    <Button
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:text="อังกฤษ"
        android:id="@+id/enThBut"
        android:textSize="30dp"
        android:layout_alignTop="@+id/thThBut"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
